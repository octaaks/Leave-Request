
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<div class="col-6 d-flex justify-content-center">
    <div class="card">
        <div class="card-header row mt-2 justify-content-center">
            <img class="col-3" src="~/mii-logo.png" width="100" />
            <div class="col-9 text-center">
                <h3 id="titleform" class="row text-blue">Change Password</h3>
            </div>

        </div>
        <div class="card-body login-card-body">
            <p class="login-box-msg">Complete your data below</p>

            <form asp-controller="Accounts" asp-action="ChangePass" method="post">
                <div class="input-group mb-3">
                    <input type="email" id="emailreset" name="email" class="form-control" placeholder="Email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input type="password" id="oldpassreset" name="oldpass" class="form-control" placeholder="Old Password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-key"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input type="password" id="newpassreset" name="newpass" class="form-control" placeholder="New Password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-key"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input type="password" id="conewpassreset" name="conewpass" class="form-control" placeholder="Confirm New Password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-key"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block" id="changeButton">Change</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

        </div>
        <!-- /.login-card-body -->
    </div>
</div>

@section scripts{
    <script src="~/js/homeAction.js"></script>
}